---
import Layout from '../../layouts/Layout.astro';
import { ArrowRight, CheckCircle2, TrendingUp, Search, Calendar, Globe, Smartphone, ShieldCheck, X, AlertCircle, XCircle } from 'lucide-react';

// Metadata
const title = "Poliklinik Mediprima | Unified Healthcare Branding & Digital Scale";
const description = "Case study: How Lamanify centralized Poliklinik Mediprima's 18+ branches into a corporate-grade digital ecosystem.";

// Cloudinary Configuration
const CLOUD_NAME = 'lamanify';
const FOLDER_NAME = 'portfolio_assets/Poliklinik%20Mediprima'; // URL encoded space
const BASE_URL = `https://res.cloudinary.com/${CLOUD_NAME}/image/upload/${FOLDER_NAME}`;

const mobileMockupUrl = `${BASE_URL}/mobile_full.webp`;
const tabletMockupUrl = `${BASE_URL}/desktop_full.webp`; // This is now the tablet view

// Mockup Frames (Cloudinary)
const logoUrl = "https://res.cloudinary.com/lamanify/image/upload/v1767532633/portfolio_assets/Poliklinik%20Mediprima/logo.png";
const iphoneFrameUrl = "https://res.cloudinary.com/lamanify/image/upload/v1767508439/Lamanify_39_aet0ul.webp";
const ipadFrameUrl = "https://res.cloudinary.com/lamanify/image/upload/v1767508360/Untitled_2_oijgni.webp";
---

<Layout title={title} description={description}>
  <main class="bg-white min-h-screen font-sans selection:bg-brand/10">
  
    <!-- --- HERO SECTION (SaaS Style) --- -->
    <section class="relative pt-44 pb-32 md:pt-52 md:pb-48 overflow-hidden bg-white">
      <!-- Fine Tech Grid Background -->
      <div class="absolute inset-0 bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)] bg-[size:2.1rem_2.1rem] [mask-image:linear-gradient(to_bottom,black_40%,transparent_100%)] pointer-events-none z-0 opacity-50"></div>

      <!-- Mesh Gradient Blob -->
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-brand/30 rounded-full blur-[120px] opacity-20 pointer-events-none -z-10"></div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-7xl mx-auto">
          <div class="grid lg:grid-cols-2 gap-16 items-center">
            
            <div class="fade-up">
              <!-- Logo as Cover (Greyscale to Color on Hover) -->
              <div class="mb-8">
                 <img 
                    src={logoUrl} 
                    alt="Poliklinik Mediprima Logo" 
                    class="h-20 w-auto object-contain grayscale hover:grayscale-0 transition-all duration-500 ease-in-out opacity-90 hover:opacity-100"
                 />
              </div>
              
              <h2 class="text-5xl md:text-6xl lg:text-7xl font-bold text-[#0a0a0a] tracking-tight mb-8 leading-[1.05]">
                Corporate Authority for <br/>
                <span class="text-gradient">Multi-Location Groups</span>.
              </h2>
              
              <p class="text-xl text-slate-500 mb-10 max-w-xl leading-relaxed font-medium">
                We unified Poliklinik Mediprima’s 18+ branches into a centralized, corporate-grade digital ecosystem—streamlining the patient journey and reinforcing their leadership in Occupational Health (OHD).
              </p>
              
              <div class="flex flex-col gap-4">
                  <div class="flex flex-wrap gap-4">
                     <a href="#audit-cta" class="px-6 py-3 bg-gradient-to-r from-brand to-brand-dark text-white font-medium rounded-lg hover:brightness-110 transition-all shadow-lg shadow-brand/20">
                        I Want This Result
                     </a>
                     <a href="#process" class="px-6 py-3 bg-white text-slate-600 border border-slate-200 font-medium rounded-lg hover:bg-slate-50 transition-colors">
                        How We Did It
                     </a>
                  </div>
                  <a href="https://www.mediprima.asia/" target="_blank" class="text-sm text-slate-400 hover:text-slate-600 transition-colors flex items-center gap-2 group w-fit">
                    <span>View Poliklinik Mediprima Website</span>
                    <ArrowRight class="w-3.5 h-3.5 group-hover:translate-x-1 transition-transform" />
                  </a>
              </div>
            </div>

            <!-- --- MOCKUP SIDE (Floating & Tilted) --- -->
            <div class="relative fade-up isolate" style="animation-delay: 200ms;">
              <!-- Glow Behind -->
              <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] bg-gradient-to-tr from-brand/20 to-purple-500/20 rounded-full blur-3xl -z-10"></div>

              <div class="relative z-10 animate-float">
                <!-- Tablet Frame & Screenshot -->
                <div class="relative w-full max-w-2xl transform lg:translate-x-12 lg:-rotate-[6deg] hover:rotate-0 transition-transform duration-700 ease-[cubic-bezier(0.23,1,0.32,1)] shadow-2xl shadow-brand/10 rounded-xl">
                    <div class="absolute inset-[3.5%] w-[93%] h-[93%] overflow-hidden rounded-sm bg-slate-100">
                        <img 
                            src={tabletMockupUrl} 
                            alt="Poliklinik Mediprima Tablet Experience" 
                            class="w-full h-full object-cover object-top"
                        />
                    </div>
                    <img 
                        src={ipadFrameUrl} 
                        alt="iPad Mockup" 
                        class="relative w-full h-auto z-10 pointer-events-none"
                    />
                </div>
                
                <!-- Mobile Frame & Screenshot Overlay -->
                <div class="absolute -bottom-12 -left-4 md:-bottom-20 md:left-0 w-40 md:w-52 z-20">
                  <div class="relative transform hover:-translate-y-4 transition-transform duration-500 ease-out shadow-2xl shadow-indigo-500/20 rounded-[3rem]">
                     <div class="absolute inset-x-[2.2%] inset-y-[1.2%] overflow-hidden rounded-[2.5rem] bg-slate-100">
                         <img 
                            src={mobileMockupUrl} 
                            alt="Poliklinik Mediprima Mobile Experience" 
                            class="w-full h-full object-cover object-top"
                        />
                     </div>
                     <img 
                        src={iphoneFrameUrl} 
                        alt="iPhone 16 Mockup" 
                        class="relative w-full h-auto z-10 pointer-events-none drop-shadow-2xl"
                    />
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </section>

    <!-- --- CHALLENGE & SOLUTION (Split Card View) --- -->
    <section class="py-24 bg-slate-50/50 relative overflow-hidden fade-up">
      <div class="container mx-auto px-4 max-w-6xl relative z-10">
        <div class="grid lg:grid-cols-[1fr_auto_1fr] gap-8 items-stretch">
          
          <!-- Challenge Card (Muted/Past) -->
          <div class="bg-[#F9FAFB] border border-slate-200 rounded-3xl p-10 flex flex-col fade-up">
            <div class="flex items-center gap-3 mb-8">
              <div class="p-2.5 bg-red-100 text-red-600 rounded-xl">
                <AlertCircle class="w-6 h-6" />
              </div>
              <h2 class="text-2xl font-bold text-slate-900 tracking-tight">The Challenge</h2>
            </div>
            
            <p class="text-slate-500 mb-10 leading-relaxed text-sm lg:text-base font-medium">
              As a leading medical group, Mediprima struggled with a fragmented digital identity that didn't reflect their clinical scale. Patients found it difficult to locate branches, costing them trust and accessibility.
            </p>

            <div class="space-y-6 mt-auto">
              <div class="flex items-start gap-4 p-4 rounded-2xl bg-white/50 border border-slate-100">
                <div class="mt-1 w-5 h-5 rounded-full bg-red-50 flex items-center justify-center shrink-0">
                    <XCircle class="w-3.5 h-3.5 text-red-400" />
                </div>
                <div class="text-sm">
                    <p class="font-bold text-slate-800 mb-1">Fragmented Digital Presence</p>
                    <p class="text-slate-500 leading-snug">Multiple branches operating without a unified digital strategy, confusing patients and corporate clients.</p>
                </div>
              </div>

              <div class="flex items-start gap-4 p-4 rounded-2xl bg-white/50 border border-slate-100">
                <div class="mt-1 w-5 h-5 rounded-full bg-red-50 flex items-center justify-center shrink-0">
                    <XCircle class="w-3.5 h-3.5 text-red-400" />
                </div>
                <div class="text-sm">
                    <p class="font-bold text-slate-800 mb-1">Information Friction</p>
                    <p class="text-slate-500 leading-snug">Difficulty in finding clinic locations, specific services, or operating hours across their 18+ branches.</p>
                </div>
              </div>

              <div class="flex items-start gap-4 p-4 rounded-2xl bg-white/50 border border-slate-100">
                <div class="mt-1 w-5 h-5 rounded-full bg-red-50 flex items-center justify-center shrink-0">
                    <XCircle class="w-3.5 h-3.5 text-red-400" />
                </div>
                <div class="text-sm">
                    <p class="font-bold text-slate-800 mb-1">Unclear OHD Identity</p>
                    <p class="text-slate-500 leading-snug">Their leadership in Occupational Health (OHD) wasn't properly communicated to corporate partners.</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Visual Connector -->
          <div class="hidden lg:flex items-center justify-center">
             <div class="w-12 h-12 bg-white rounded-full shadow-lg border border-slate-100 flex items-center justify-center text-slate-300">
                 <ArrowRight class="w-6 h-6" />
             </div>
          </div>

          <!-- Solution Card (Elevated/Future) -->
          <div class="bg-white border border-blue-50 shadow-[0_20px_60px_-15px_rgba(0,0,0,0.08)] rounded-3xl p-10 flex flex-col fade-up" style="animation-delay: 150ms;">
            <div class="flex items-center gap-3 mb-8">
              <div class="p-2.5 bg-brand text-white rounded-xl shadow-lg shadow-brand/20">
                <CheckCircle2 class="w-6 h-6" />
              </div>
              <h2 class="text-2xl font-bold text-slate-900 tracking-tight">The Solution</h2>
            </div>

            <p class="text-slate-800 mb-10 leading-relaxed text-sm lg:text-base font-semibold">
              We engineered a Centralized Brand Hub that unifies all 18+ branches under one authoritative digital roof, focusing on accessibility and corporate-grade trust.
            </p>

            <div class="space-y-6 mt-auto">
              <div class="flex items-start gap-4 p-5 rounded-2xl bg-slate-50/50 border border-blue-50/50 group hover:border-brand/20 transition-colors">
                <div class="mt-1 w-6 h-6 rounded-full bg-emerald-500 flex items-center justify-center shrink-0 shadow-sm">
                    <CheckCircle2 class="w-4 h-4 text-white" />
                </div>
                <div class="text-sm">
                    <p class="font-bold text-slate-900 mb-1">Corporate-Grade Architecture</p>
                    <p class="text-slate-600 leading-snug">A unified digital ecosystem that establishes immediate trust for both individual patients and corporate OHD clients.</p>
                </div>
              </div>

              <div class="flex items-start gap-4 p-5 rounded-2xl bg-slate-50/50 border border-blue-50/50 group hover:border-brand/20 transition-colors">
                <div class="mt-1 w-6 h-6 rounded-full bg-emerald-500 flex items-center justify-center shrink-0 shadow-sm">
                    <CheckCircle2 class="w-4 h-4 text-white" />
                </div>
                <div class="text-sm">
                    <p class="font-bold text-slate-900 mb-1">Intutive "Find a Clinic" Feature</p>
                    <p class="text-slate-600 leading-snug">Reduced friction by allowing patients to find their nearest Mediprima branch and services instantly.</p>
                </div>
              </div>

              <div class="flex items-start gap-4 p-5 rounded-2xl bg-slate-50/50 border border-blue-50/50 group hover:border-brand/20 transition-colors">
                <div class="mt-1 w-6 h-6 rounded-full bg-emerald-500 flex items-center justify-center shrink-0 shadow-sm">
                    <CheckCircle2 class="w-4 h-4 text-white" />
                </div>
                <div class="text-sm">
                    <p class="font-bold text-slate-900 mb-1">OHD Authority Reinforcement</p>
                    <p class="text-slate-600 leading-snug">Dedicated portals and content that showcase their expertise in Occupational Health directly to HR partners.</p>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </section>

    <!-- --- STRATEGY PILLARS (Engineer Section / Dark Bento) --- -->
    <section class="py-32 bg-[#0A0A0A] text-white overflow-hidden relative fade-up" id="process">
      <!-- Technical Grid Background -->
      <div class="absolute inset-0 bg-[linear-gradient(to_right,#222_1px,transparent_1px),linear-gradient(to_bottom,#222_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)] pointer-events-none"></div>
      
      <div class="container mx-auto px-4 max-w-7xl relative z-10">
        <div class="text-center max-w-3xl mx-auto mb-20 fade-up">
           <h2 class="text-3xl md:text-5xl font-bold mb-6 tracking-tight">Built for <span class="text-gradient">Scale</span>. Optimized for <span class="text-gradient">Access</span>.</h2>
           <p class="text-gray-400 text-lg">We transformed a scattered web of pages into a high-performance network that functions like a "Digital Receptionist" for the entire Mediprima group.</p>
        </div>

        <div class="grid md:grid-cols-3 gap-6">
          <!-- Bento Card 1 -->
          <div class="bg-white/[0.03] border border-white/10 p-8 rounded-3xl hover:border-brand/50 transition-all duration-300 group fade-up relative overflow-hidden backdrop-blur-sm">
            <div class="absolute inset-0 bg-gradient-to-b from-transparent to-brand/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            
            <div class="relative z-10">
                <div class="w-12 h-12 bg-gray-800 rounded-xl flex items-center justify-center mb-6 text-white border border-white/5 shadow-inner">
                  <Globe class="w-6 h-6" />
                </div>
                <h3 class="text-xl font-bold mb-3">Unified Brand Architecture</h3>
                <p class="text-gray-400 text-sm leading-relaxed">
                  We consolidated 18+ branches into one premium website. This unified approach establishment immediate trust and projected the true scale of the Mediprima group to both public and corporate sectors.
                </p>
                
                <!-- Mini UI Metric -->
                <div class="mt-6 flex items-center gap-2 text-xs font-mono text-emerald-400 bg-emerald-500/10 px-3 py-2 rounded-lg w-fit border border-emerald-500/20">
                    <span class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse"></span>
                    Identity Unified: 100%
                </div>
            </div>
          </div>

          <!-- Bento Card 2 -->
          <div class="bg-white/[0.03] border border-white/10 p-8 rounded-3xl hover:border-blue-500/50 transition-all duration-300 group fade-up relative overflow-hidden backdrop-blur-sm" style="animation-delay: 100ms;">
            <div class="absolute inset-0 bg-gradient-to-b from-transparent to-blue-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            
            <div class="relative z-10">
                <div class="w-12 h-12 bg-gray-800 rounded-xl flex items-center justify-center mb-6 text-white border border-white/5 shadow-inner">
                  <Search class="w-6 h-6" />
                </div>
                <h3 class="text-xl font-bold mb-3">The "Find a Clinic" Frictionless Path</h3>
                <p class="text-gray-400 text-sm leading-relaxed">
                  We engineered an intuitive clinic discovery system. Patients can now filter by location or service, ensuring they reach the right branch for their specific medical needs with zero confusion.
                </p>
                
                <!-- Mini UI Snippet -->
                <div class="mt-6 border-t border-white/10 pt-4 flex items-center gap-3 opacity-60">
                    <div class="h-1.5 w-12 bg-gray-600 rounded-full"></div>
                    <div class="h-1.5 w-6 bg-blue-500 rounded-full"></div>
                    <div class="text-[10px] text-gray-500 ml-auto font-mono">Location Match</div>
                </div>
            </div>
          </div>

          <!-- Bento Card 3 -->
          <div class="bg-white/[0.03] border border-white/10 p-8 rounded-3xl hover:border-purple-500/50 transition-all duration-300 group fade-up relative overflow-hidden backdrop-blur-sm" style="animation-delay: 200ms;">
            <div class="absolute inset-0 bg-gradient-to-b from-transparent to-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            
            <div class="relative z-10">
                <div class="w-12 h-12 bg-gray-800 rounded-xl flex items-center justify-center mb-6 text-white border border-white/5 shadow-inner">
                  <ShieldCheck class="w-6 h-6" />
                </div>
                <h3 class="text-xl font-bold mb-3">OHD Leadership Portal</h3>
                <p class="text-gray-400 text-sm leading-relaxed">
                  Mediprima is a leader in Occupational Health. We created dedicated, professional interfaces for corporate partners, streamlining MMC and OHD compliance requests and authority.
                </p>
                
                <!-- Mini UI Button -->
                <div class="mt-6 flex">
                    <div class="px-4 py-2 bg-brand/20 text-brand text-xs font-bold rounded-lg border border-brand/20">
                        OHD Services ->
                    </div>
                </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- --- RESULTS IMPACT (Dashboard Style) --- -->
    <section class="py-32 bg-slate-50 relative fade-up" id="results">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="text-center mb-20 fade-up">
          <h2 class="text-4xl md:text-5xl font-bold text-[#0a0a0a] mb-6 tracking-tight">The <span class="text-gradient">Impact</span></h2>
          <p class="text-slate-600 text-lg">Centralizing scale into clinical authority.</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto mb-20">
          <!-- Widget 1 -->
          <div class="bg-white p-8 rounded-2xl shadow-[0_2px_10px_rgba(0,0,0,0.05)] border border-slate-100 hover:shadow-lg transition-shadow group fade-up">
             <div class="flex items-center justify-between mb-4">
                 <span class="text-xs font-semibold uppercase tracking-wider text-slate-400">Scale</span>
                 <Globe class="w-4 h-4 text-slate-300" />
             </div>
             <div class="text-5xl font-bold text-slate-900 mb-2 group-hover:text-brand transition-colors">18+</div>
             <p class="text-sm text-slate-500 leading-tight mb-4">Branches Unified Digital Presence</p>
             <div class="flex items-center gap-2">
                 <svg class="w-16 h-8 text-emerald-500" viewBox="0 0 100 40" fill="none" stroke="currentColor" stroke-width="2">
                     <path d="M0 35 L20 25 L40 30 L60 10 L80 15 L100 5" />
                 </svg>
                 <span class="text-xs font-medium text-emerald-600 bg-emerald-50 px-2 py-1 rounded-full">+ Authority</span>
             </div>
          </div>
          
          <!-- Widget 2 -->
          <div class="bg-white p-8 rounded-2xl shadow-[0_2px_10px_rgba(0,0,0,0.05)] border border-slate-100 hover:shadow-lg transition-shadow group fade-up" style="animation-delay: 100ms;">
             <div class="flex items-center justify-between mb-4">
                 <span class="text-xs font-semibold uppercase tracking-wider text-slate-400">Efficiency</span>
                 <Search class="w-4 h-4 text-slate-300" />
             </div>
             <div class="text-5xl font-bold text-slate-900 mb-2 group-hover:text-blue-600 transition-colors">Find</div>
             <p class="text-sm text-slate-500 leading-tight mb-4">Instant Location & Branch Discovery</p>
             <div class="flex items-center gap-2">
                 <svg class="w-16 h-8 text-blue-500" viewBox="0 0 100 40" fill="none" stroke="currentColor" stroke-width="2">
                     <path d="M0 30 L30 30 L60 10 L100 10" />
                 </svg>
                 <span class="text-xs font-medium text-blue-600 bg-blue-50 px-2 py-1 rounded-full">User-First</span>
             </div>
          </div>
          
          <!-- Widget 3 -->
          <div class="bg-white p-8 rounded-2xl shadow-[0_2px_10px_rgba(0,0,0,0.05)] border border-slate-100 hover:shadow-lg transition-shadow group fade-up" style="animation-delay: 200ms;">
             <div class="flex items-center justify-between mb-4">
                 <span class="text-xs font-semibold uppercase tracking-wider text-slate-400">Positioning</span>
                 <ShieldCheck class="w-4 h-4 text-slate-300" />
             </div>
             <div class="text-5xl font-bold text-slate-900 mb-2 group-hover:text-emerald-500 transition-colors">Leader</div>
             <p class="text-sm text-slate-500 leading-tight mb-4">Solidified OHD Healthcare Authority</p>
             <div class="flex items-center gap-2">
                 <svg class="w-16 h-8 text-emerald-500" viewBox="0 0 100 40" fill="none" stroke="currentColor" stroke-width="2">
                     <path d="M0 40 Q25 40 50 20 T100 0" />
                 </svg>
                 <span class="text-xs font-medium text-slate-500">Corporate-Ready</span>
             </div>
          </div>
        </div>

        <!-- Call to Action -->
        <div id="audit-cta" class="bg-slate-900 rounded-3xl p-12 text-center text-white relative overflow-hidden fade-up">
          <div class="absolute inset-0 bg-brand/10 blur-3xl rounded-full scale-150 opacity-20 pointer-events-none"></div>
          <div class="relative z-10 max-w-2xl mx-auto">
            <h3 class="text-3xl md:text-4xl font-bold mb-6 tracking-tight">Does Your Digital Presence Match Your Clinical Scale?</h3>
            <p class="text-gray-400 mb-8 text-lg">We transformed Poliklinik Mediprima into a centralized healthcare leader. Let’s audit your group’s digital authority today.</p>
            <div class="flex justify-center">
              <a 
                href="/growth-audit" 
                class="px-8 py-4 bg-brand hover:bg-brand-dark text-white font-bold rounded-lg transition-all shadow-lg shadow-brand/30 hover:scale-105"
              >
                Get My Free Group Audit
              </a>
            </div>
            <div class="mt-8 flex justify-center">
                <a href="https://www.mediprima.asia/" target="_blank" class="text-sm text-slate-500 hover:text-white transition-colors flex items-center gap-2 group">
                    <span>View Poliklinik Mediprima Website</span>
                    <ArrowRight class="w-4 h-4 group-hover:translate-x-1 transition-transform" />
                </a>
            </div>
          </div>
        </div>
      </div>
    </section>

  </main>
</Layout>

<style>
  /* SVG Component replacement for Lucide usage in Astro */
  .lucide {
    width: 24px;
    height: 24px;
    stroke: currentColor;
    stroke-width: 2;
    stroke-linecap: round;
    stroke-linejoin: round;
    fill: none;
  }

  @keyframes float {
    0% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(0.5deg); }
    100% { transform: translateY(0px) rotate(0deg); }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  /* Fade-in Animation Styles */
  .fade-up {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 1.2s cubic-bezier(0.16, 1, 0.3, 1), transform 1.2s cubic-bezier(0.16, 1, 0.3, 1);
    will-change: transform, opacity;
  }

  .fade-up.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Stagger delays for inner elements can be added via inline styles if needed */
</style>
