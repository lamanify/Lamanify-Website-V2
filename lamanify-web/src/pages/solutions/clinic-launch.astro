---
import Layout from '../../layouts/Layout.astro';
import { Button } from '../../components/ui/Button';
import { CheckCircle, Clock, TrendingUp, AlertTriangle, ShieldCheck, Database, Smartphone, Users, ArrowRight } from 'lucide-react';

const title = "Clinic Launch Solution - Launch With Momentum | Lamanify";
const description = "Don't open to an empty waiting room. Lamanify's Clinic Launchpad™ helps new Malaysian clinics build a patient waiting list before construction is even finished.";
---

<Layout title={title} description={description}>
  <main class="overflow-hidden bg-[#F9FAFB]">
    <!-- 1. Hero Section -->
    <section class="relative pt-32 pb-20 lg:pt-48 lg:pb-32 bg-white border-b border-[#E5E7EB] overflow-hidden">
        <!-- Minimal Grid Background -->
        <div class="absolute inset-0 z-0 bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)]"></div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-5xl mx-auto text-center">
            <span class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-[#FAFAFA] border border-[#E5E7EB] text-[#737373] text-xs font-semibold uppercase tracking-widest mb-8 fade-up shadow-sm">
                <span class="w-2 h-2 rounded-full bg-primary animate-pulse"></span>
                Go-To-Market Protocol
            </span>

          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-[#0a0a0a] tracking-[-0.03em] leading-[1.1] mb-8 fade-up" style="animation-delay: 100ms;">
             Don’t Open to an Empty Waiting Room. <br class="hidden md:block" />
             <span class="text-transparent bg-clip-text bg-gradient-to-br from-[#e9204f] to-[#8a0f2b]">Launch With Momentum.</span>
          </h1>
          
          <p class="text-lg md:text-xl text-[#404040] mb-10 max-w-2xl mx-auto leading-relaxed fade-up" style="animation-delay: 200ms;">
            We help new Malaysian clinics build a patient waiting list <em>before</em> construction is even finished. Secure your cash flow from Day 1 with our proven <strong>Clinic Launchpad™</strong> system.
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center fade-up" style="animation-delay: 300ms;">
            <Button client:load href="#timeline" variant="primary" size="lg" className="shadow-[0px_4px_14px_0px_rgba(233,32,79,0.35)] rounded-lg">
              Get Your Launch Timeline
            </Button>
             <a href="/portfolio" class="px-6 py-3 rounded-lg border border-[#E5E7EB] bg-white text-[#0a0a0a] font-medium hover:border-primary transition-colors text-[0.95rem]">
                View Success Stories
            </a>
          </div>
           <p class="text-xs text-[#737373] mt-6 fade-up" style="animation-delay: 350ms;">
              Ideal for clinics opening in the next 30-90 days.
            </p>
        </div>

        <!-- Visual Representation: Dashboard Style -->
        <div class="mt-20 relative mx-auto max-w-5xl fade-up" style="animation-delay: 400ms;">
            <div class="bg-white rounded-2xl shadow-2xl border border-[#E5E7EB] p-2 md:p-4 relative">
                <!-- Browser Bar Mockup -->
                <div class="h-8 bg-[#F9FAFB] border-b border-[#E5E7EB] rounded-t-xl flex items-center px-4 gap-2 mb-4">
                    <div class="w-3 h-3 rounded-full bg-[#E5E7EB]"></div>
                    <div class="w-3 h-3 rounded-full bg-[#E5E7EB]"></div>
                    <div class="w-3 h-3 rounded-full bg-[#E5E7EB]"></div>
                </div>

                <div class="grid md:grid-cols-3 gap-6 p-4 md:p-8">
                     <!-- Metric Card 1 -->
                     <div class="bg-white border border-[#E5E7EB] rounded-2xl p-6 shadow-sm flex flex-col items-center text-center">
                        <span class="text-xs text-[#737373] uppercase tracking-wider font-semibold mb-2">Pre-Launch Leads</span>
                        <div class="text-4xl font-bold text-[#0a0a0a] tracking-tight mb-1">
                            248
                        </div>
                        <div class="flex items-center text-green-600 text-xs font-medium bg-green-50 px-2 py-1 rounded-full">
                            <TrendingUp size={12} class="mr-1" /> +120% vs Avg
                        </div>
                     </div>

                     <!-- Metric Card 2 -->
                     <div class="bg-white border border-[#E5E7EB] rounded-2xl p-6 shadow-sm flex flex-col items-center text-center relative overflow-hidden group">
                         <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-primary to-[#8a0f2b]"></div>
                        <span class="text-xs text-[#737373] uppercase tracking-wider font-semibold mb-2">Day 1 Bookings</span>
                        <div class="text-4xl font-bold text-primary tracking-tight mb-1 group-hover:scale-110 transition-transform duration-300">
                           Full
                        </div>
                         <div class="flex items-center text-[#737373] text-xs">
                           Capacity Reached
                        </div>
                     </div>

                     <!-- Metric Card 3 -->
                     <div class="bg-white border border-[#E5E7EB] rounded-2xl p-6 shadow-sm flex flex-col items-center text-center">
                        <span class="text-xs text-[#737373] uppercase tracking-wider font-semibold mb-2">Breakeven Speed</span>
                        <div class="text-4xl font-bold text-[#0a0a0a] tracking-tight mb-1">
                            2 Mo
                        </div>
                        <div class="flex items-center text-green-600 text-xs font-medium bg-green-50 px-2 py-1 rounded-full">
                             Industry Record
                        </div>
                     </div>
                </div>
            </div>
             <!-- Decorative Elements behind -->
            <div class="absolute -top-10 -right-10 w-64 h-64 bg-primary/5 rounded-full blur-3xl -z-10"></div>
            <div class="absolute -bottom-10 -left-10 w-64 h-64 bg-blue-500/5 rounded-full blur-3xl -z-10"></div>
        </div>
      </div>
    </section>

    <!-- 2. The Problem: Bento Grid -->
    <section class="py-24 bg-[#F9FAFB]">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-left mb-16 fade-up">
            <h2 class="text-4xl font-bold text-[#0a0a0a] tracking-[-0.02em] mb-6">The Most Dangerous Month is Month 1.</h2>
            <p class="text-lg text-[#404040] leading-relaxed">
                You have spent hundreds of thousands on renovation and licensing. The meter is running on your overheads. But when you open, <strong class="text-[#0a0a0a]">will anyone identify you in the noise?</strong>
            </p>
        </div>

        <div class="grid md:grid-cols-3 gap-6 max-w-6xl mx-auto">
            <!-- Problem 1 -->
            <div class="bg-white p-8 rounded-2xl border border-[#E5E7EB] shadow-sm hover:-translate-y-1 hover:shadow-lg hover:border-[#ffe4e9] transition-all duration-300 fade-up group">
                <div class="w-12 h-12 bg-red-50 text-red-600 rounded-xl flex items-center justify-center mb-6 border border-red-100 group-hover:bg-red-600 group-hover:text-white transition-colors">
                    <AlertTriangle size={24} />
                </div>
                <h3 class="text-xl font-medium text-[#0a0a0a] tracking-[-0.01em] mb-3">The "Hope" Strategy</h3>
                <p class="text-[#737373] text-sm leading-relaxed">Relying on buntings and "friends & family" is not a business plan. It's a recipe for dangerously slow growth and cash flow gaps.</p>
            </div>

            <!-- Problem 2 -->
            <div class="bg-white p-8 rounded-2xl border border-[#E5E7EB] shadow-sm hover:-translate-y-1 hover:shadow-lg hover:border-[#ffe4e9] transition-all duration-300 fade-up group" style="animation-delay: 100ms;">
                <div class="w-12 h-12 bg-orange-50 text-orange-600 rounded-xl flex items-center justify-center mb-6 border border-orange-100 group-hover:bg-orange-600 group-hover:text-white transition-colors">
                    <Clock size={24} />
                </div>
                <h3 class="text-xl font-medium text-[#0a0a0a] tracking-[-0.01em] mb-3">The Google Lag</h3>
                <p class="text-[#737373] text-sm leading-relaxed">If you wait until you open to start marketing, Google Maps won't rank you for months. You remain invisible to local searchers.</p>
            </div>

            <!-- Problem 3 -->
            <div class="bg-white p-8 rounded-2xl border border-[#E5E7EB] shadow-sm hover:-translate-y-1 hover:shadow-lg hover:border-[#ffe4e9] transition-all duration-300 fade-up group" style="animation-delay: 200ms;">
                <div class="w-12 h-12 bg-slate-50 text-slate-900 rounded-xl flex items-center justify-center mb-6 border border-slate-100 group-hover:bg-slate-900 group-hover:text-white transition-colors">
                    <TrendingUp size={24} />
                </div>
                <h3 class="text-xl font-medium text-[#0a0a0a] tracking-[-0.01em] mb-3">The Cash Burn</h3>
                <p class="text-[#737373] text-sm leading-relaxed">Every day with an empty chair is cash burned from your reserves. You need patient revenue immediately upon opening.</p>
            </div>
        </div>
      </div>
    </section>

    <!-- 3. The Solution: Structured Timeline -->
    <section id="timeline" class="py-24 bg-white border-y border-[#E5E7EB]">
        
        <div class="container mx-auto px-4 relative z-10">
            <div class="text-center mb-20 fade-up">
                <span class="text-primary font-bold tracking-widest uppercase text-xs mb-3 block">Methodology</span>
                <h2 class="text-4xl font-bold text-[#0a0a0a] tracking-[-0.02em] mb-4">Launchpad™ Protocol</h2>
                <p class="text-[#737373] max-w-2xl mx-auto">
                    We break the launch down into a precise T-Minus timeline.
                </p>
            </div>

            <div class="max-w-5xl mx-auto relative">
                <!-- Vertical Line for Mobile -->
                <div class="absolute left-8 top-0 bottom-0 w-px bg-[#E5E7EB] md:hidden"></div>

                <!-- Phase 1 -->
                <div class="relative pl-20 md:pl-0 mb-16 md:mb-0 md:group">
                    <div class="md:flex items-center justify-between gap-12 group-hover:opacity-100 transition-opacity">
                         <!-- Content Left (Desktop) -->
                        <div class="md:w-[45%] md:text-right fade-up order-1">
                             <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-slate-50 border border-slate-200 text-slate-600 text-xs font-bold uppercase tracking-wider mb-4">
                                T-Minus 8 Weeks
                             </div>
                             <h3 class="text-2xl font-bold text-[#0a0a0a] mb-3">The Foundation</h3>
                             <p class="text-[#737373] mb-6 text-sm">While contractors are drilling, we are building your digital footprint.</p>
                             <ul class="md:flex md:flex-col md:items-end space-y-2">
                                <li class="text-sm text-[#404040]">Digital Real Estate Acquisition</li>
                                <li class="text-sm text-[#404040]">Google Verification Initiation</li>
                                <li class="text-sm text-[#404040]">Brand Identity System</li>
                             </ul>
                        </div>

                         <!-- Center Node -->
                        <div class="absolute left-2 md:left-1/2 md:-translate-x-1/2 top-0 md:top-auto w-12 h-12 bg-white border-4 border-[#E5E7EB] rounded-full flex items-center justify-center z-10 order-2 md:group-hover:border-primary md:group-hover:scale-110 transition-all duration-300">
                            <span class="font-bold text-[#0a0a0a] text-sm">01</span>
                        </div>

                        <!-- Empty Right (Desktop) -->
                        <div class="hidden md:block md:w-[45%] order-3"></div>
                    </div>
                </div>

                <!-- Connector Line (Desktop) -->
                <div class="hidden md:block absolute left-1/2 -translate-x-1/2 top-12 h-24 w-px bg-[#E5E7EB]"></div>

                 <!-- Phase 2 -->
                <div class="relative pl-20 md:pl-0 mb-16 md:mb-0 md:mt-16 md:group">
                    <div class="md:flex items-center justify-between gap-12">
                         <!-- Empty Left (Desktop) -->
                        <div class="hidden md:block md:w-[45%] order-1"></div>

                         <!-- Center Node -->
                        <div class="absolute left-2 md:left-1/2 md:-translate-x-1/2 top-0 md:top-auto w-12 h-12 bg-primary text-white border-4 border-white shadow-[0_4px_14px_rgba(233,32,79,0.4)] rounded-full flex items-center justify-center z-10 order-2 scale-110">
                            <span class="font-bold text-sm">02</span>
                        </div>

                        <!-- Content Right (Desktop) -->
                        <div class="md:w-[45%] fade-up order-3">
                             <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-primary/10 border border-primary/20 text-primary text-xs font-bold uppercase tracking-wider mb-4">
                                T-Minus 4 Weeks
                             </div>
                             <h3 class="text-2xl font-bold text-[#0a0a0a] mb-3">The Hype</h3>
                             <p class="text-[#737373] mb-6 text-sm">Building the "buzz" in the neighborhood before you open.</p>
                             <ul class="space-y-2">
                                <li class="text-sm text-[#404040] flex items-center gap-2">
                                    <div class="w-1.5 h-1.5 rounded-full bg-primary"></div> Geo-targeted "Coming Soon" Ads
                                </li>
                                <li class="text-sm text-[#404040] flex items-center gap-2">
                                    <div class="w-1.5 h-1.5 rounded-full bg-primary"></div> Founding Patient Offers
                                </li>
                                <li class="text-sm text-[#404040] flex items-center gap-2">
                                    <div class="w-1.5 h-1.5 rounded-full bg-primary"></div> Waitlist Database Building
                                </li>
                             </ul>
                        </div>
                    </div>
                </div>

                 <!-- Connector Line (Desktop) -->
                 <div class="hidden md:block absolute left-1/2 -translate-x-1/2 top-[calc(11rem+3rem)] h-24 w-px bg-[#E5E7EB]"></div>

                 <!-- Phase 3 -->
                 <div class="relative pl-20 md:pl-0 md:mt-16 md:group">
                    <div class="md:flex items-center justify-between gap-12">
                         <!-- Content Left (Desktop) -->
                        <div class="md:w-[45%] md:text-right fade-up order-1">
                             <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-green-50 border border-green-200 text-green-700 text-xs font-bold uppercase tracking-wider mb-4">
                                Day 0
                             </div>
                             <h3 class="text-2xl font-bold text-[#0a0a0a] mb-3">Grand Opening</h3>
                             <p class="text-[#737373] mb-6 text-sm">The doors open. The phone rings. Revenue flows.</p>
                             <ul class="md:flex md:flex-col md:items-end space-y-2">
                                <li class="text-sm text-[#404040]">Launch Blitz Ads</li>
                                <li class="text-sm text-[#404040]">Reputation Sprint (50 Reviews)</li>
                                <li class="text-sm text-[#404040]">Database Activation Blasts</li>
                             </ul>
                        </div>

                         <!-- Center Node -->
                        <div class="absolute left-2 md:left-1/2 md:-translate-x-1/2 top-0 md:top-auto w-12 h-12 bg-white border-4 border-[#E5E7EB] rounded-full flex items-center justify-center z-10 order-2 md:group-hover:border-green-500 transition-colors duration-300">
                            <span class="font-bold text-[#0a0a0a] text-sm">03</span>
                        </div>

                        <!-- Empty Right (Desktop) -->
                        <div class="hidden md:block md:w-[45%] order-3"></div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <!-- 4. Compliance Bento -->
    <section class="py-24 bg-[#F9FAFB]">
        <div class="container mx-auto px-4">
            <div class="flex flex-col md:flex-row items-center gap-12 max-w-6xl mx-auto">
                <div class="w-full md:w-1/2 fade-up">
                    <div class="bg-white p-8 rounded-2xl shadow-sm border border-[#E5E7EB]">
                        <div class="w-12 h-12 bg-blue-50 text-blue-600 rounded-xl flex items-center justify-center mb-6">
                            <ShieldCheck size={24} />
                        </div>
                        <h2 class="text-3xl font-bold text-[#0a0a0a] tracking-[-0.02em] mb-4">Protect Your New License.</h2>
                        <p class="text-[#404040] mb-8 leading-relaxed">
                            The last thing a new clinic needs is a warning letter from the Ministry of Health. We operate strictly within guidelines, creating aggressive growth without regulatory risk.
                        </p>
                        
                        <div class="space-y-4">
                             <div class="flex items-start gap-4 p-4 rounded-xl bg-[#F9FAFB] border border-[#E5E7EB]">
                                <CheckCircle size={20} className="text-green-600 mt-1 shrink-0" />
                                <div>
                                    <h4 class="font-semibold text-[#0a0a0a] text-sm">Borang F & Signage</h4>
                                    <p class="text-xs text-[#737373] mt-1">Guidance on compliant physical and digital advertisements.</p>
                                </div>
                             </div>
                             <div class="flex items-start gap-4 p-4 rounded-xl bg-[#F9FAFB] border border-[#E5E7EB]">
                                <CheckCircle size={20} className="text-green-600 mt-1 shrink-0" />
                                <div>
                                    <h4 class="font-semibold text-[#0a0a0a] text-sm">KKLIU Pricing Rules</h4>
                                    <p class="text-xs text-[#737373] mt-1">Structuring "Opening Offers" to be effective yet compliant.</p>
                                </div>
                             </div>
                        </div>
                    </div>
                </div>
                 <div class="w-full md:w-1/2 fade-up" style="animation-delay: 200ms;">
                     <h3 class="text-xl font-bold text-[#0a0a0a] mb-4">Why This Matters</h3>
                     <p class="text-[#737373] mb-6 leading-relaxed">
                        Starting a new practice is risky enough without regulatory headaches. Many generalist agencies don't understand the difference between selling t-shirts and selling medical services.
                     </p>
                     <p class="text-[#737373] leading-relaxed">
                        We act as your safeguard. We know what words to avoid, what images to use, and how to position your launch to be authoritative and professional.
                     </p>
                </div>
            </div>
        </div>
    </section>

    <!-- 5. Tech Stack Bento -->
    <section class="py-24 bg-white border-t border-[#E5E7EB]">
        <div class="container mx-auto px-4 text-center">
            <div class="max-w-3xl mx-auto mb-16 fade-up">
                <span class="text-primary font-bold tracking-widest uppercase text-xs mb-3 block">Infrastructure</span>
                <h2 class="text-4xl font-bold text-[#0a0a0a] tracking-[-0.02em] mb-6">Built for the Future.</h2>
                <p class="text-lg text-[#737373]">
                    Don't start with messy spreadsheets. We set up your digital infrastructure correctly from Day 1.
                </p>
            </div>

            <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
                <div class="p-8 rounded-2xl bg-white border border-[#E5E7EB] text-left fade-up hover:border-primary/50 transition-colors duration-300">
                    <div class="w-10 h-10 bg-slate-50 border border-slate-100 rounded-lg flex items-center justify-center mb-6 text-slate-700">
                        <Smartphone size={20} />
                    </div>
                    <h3 class="text-lg font-bold text-[#0a0a0a] mb-2">Conversion Website</h3>
                    <p class="text-[#737373] text-sm leading-relaxed">Mobile-fast, SEO-structured, and specifically designed to convert visitors into booked appointments.</p>
                </div>

                <div class="p-8 rounded-2xl bg-white border border-[#E5E7EB] text-left fade-up hover:border-primary/50 transition-colors duration-300" style="animation-delay: 100ms;">
                    <div class="w-10 h-10 bg-slate-50 border border-slate-100 rounded-lg flex items-center justify-center mb-6 text-slate-700">
                        <Database size={20} />
                    </div>
                    <h3 class="text-lg font-bold text-[#0a0a0a] mb-2">Analytics Matrix</h3>
                    <p class="text-[#737373] text-sm leading-relaxed">GA4 and Pixel tracking installed <em>before</em> spending money, ensuring 100% data visibility.</p>
                </div>

                <div class="p-8 rounded-2xl bg-white border border-[#E5E7EB] text-left fade-up hover:border-primary/50 transition-colors duration-300" style="animation-delay: 200ms;">
                    <div class="w-10 h-10 bg-slate-50 border border-slate-100 rounded-lg flex items-center justify-center mb-6 text-slate-700">
                        <Users size={20} />
                    </div>
                    <h3 class="text-lg font-bold text-[#0a0a0a] mb-2">CRM Integration</h3>
                    <p class="text-[#737373] text-sm leading-relaxed">Connecting leads directly to your clinic management workflow or our Agency OS.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- 6. Case Study Card -->
    <section class="py-24 bg-[#0a0a0a] text-white">
        <div class="container mx-auto px-4">
            <div class="max-w-5xl mx-auto bg-[#171717] rounded-3xl p-8 md:p-16 border border-[#262626] fade-up relative overflow-hidden">
                <!-- Background Glow -->
                <div class="absolute top-0 right-0 w-96 h-96 bg-primary/10 rounded-full blur-[100px] pointer-events-none"></div>

                <div class="grid md:grid-cols-2 gap-12 items-center relative z-10">
                    <div>
                        <span class="text-primary font-bold tracking-widest uppercase text-xs mb-4 block">Case Study</span>
                        <h3 class="text-3xl font-bold mb-6 text-white tracking-[-0.02em]">Breakeven in Month 2.</h3>
                        <p class="text-[#a3a3a3] mb-8 leading-relaxed">
                            Dr. M opened his dental surgery in a saturated row of shop lots in Subang Jaya. Using our Launchpad™ protocol, he secured 250+ leads before opening day.
                        </p>
                        
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <div class="text-3xl font-bold text-white mb-1">250+</div>
                                <div class="text-xs text-[#737373] uppercase tracking-wider">Pre-Launch Leads</div>
                            </div>
                            <div>
                                <div class="text-3xl font-bold text-white mb-1">7 Days</div>
                                <div class="text-xs text-[#737373] uppercase tracking-wider">Fully Booked Launch</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="bg-[#262626] rounded-2xl p-6 border border-[#404040]">
                        <div class="flex items-center gap-4 mb-6">
                            <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center">
                                <span class="font-serif italic font-bold">D</span>
                            </div>
                            <div>
                                <div class="font-bold text-white text-sm">Dental Surgery Subang</div>
                                <div class="text-xs text-[#737373]">New Opening</div>
                            </div>
                        </div>
                        <blockquote class="text-[#d4d4d4] italic text-sm leading-relaxed mb-4">
                            "I was terrified of opening to an empty clinic. Lamanify filled my schedule before I even finished renovating. We hit breakeven way faster than I planned."
                        </blockquote>
                        <div class="text-xs font-bold text-primary">- Dr. M, Founder</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- 7. Final CTA -->
    <section class="py-32 bg-white relative overflow-hidden">
        <div class="container mx-auto px-4 relative z-10 text-center fade-up">
            <h2 class="text-5xl md:text-6xl font-bold text-[#0a0a0a] mb-8 tracking-[-0.03em]">When Do You Open?</h2>
            <p class="text-xl text-[#737373] mb-10 max-w-2xl mx-auto">
                Don't wait until the renovation is done. The clock is ticking on your marketing timeline.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                <Button client:load href="/contact" variant="primary" size="lg" className="h-14 px-8 text-lg shadow-[0_4px_14px_rgba(233,32,79,0.3)] hover:shadow-[0_6px_20px_rgba(233,32,79,0.4)] transition-all">
                    Get Your Pre-Launch Roadmap
                </Button>
            </div>
            <p class="mt-6 text-sm text-[#737373]">
                Book a strategy call and we’ll map out your first 90 days.
            </p>
        </div>
    </section>
  </main>
</Layout>
