---
import { Building2, Stethoscope, Activity, ShieldCheck, Sparkles, Plus, ArrowRight, CheckCircle2 } from 'lucide-react';
import { Button } from '../ui/Button';
import { Tooth } from '../ui/Tooth';

// Trusted Logos Data
const trustedLogos = [
  { name: "Clinic One", icon: Building2 },
  { name: "MedCare", icon: Stethoscope },
  { name: "G Partner", icon: Activity },
  { name: "Meta", icon: Activity },
  { name: "MOH Compliant", icon: ShieldCheck },
];

// Segmentation Data
const segments = [
  {
    title: "Dental Practices",
    icon: Tooth,
    description: "High-value patient acquisition for implants, braces, and cosmetic dentistry.",
    link: "#",
    cta: "Explore Dental Growth"
  },
  {
    title: "Aesthetic & Dermatology",
    icon: Sparkles,
    description: "Brand-focused campaigns that adhere to strict KKLIU advertising guidelines.",
    link: "#",
    cta: "Explore Aesthetic Growth"
  },
  {
    title: "Specialist Centers",
    icon: Stethoscope,
    description: "Targeted SEO to connect patients with ENT, Cardio, and Paediatric experts.",
    link: "#",
    cta: "Explore Specialist Growth"
  },
  {
    title: "General Practitioners",
    icon: Plus, // Medical Cross
    description: "Local dominance strategies to capture high-volume community traffic.",
    link: "#",
    cta: "Explore GP Growth"
  }
];

const frameworkPoints = [
  {
    title: "Data-Driven",
    text: "Decisions based on CPA (Cost Per Appointment), not vanity metrics."
  },
  {
    title: "Fully Compliant",
    text: "All campaigns vetted against current Acts & Regulations."
  },
  {
    title: "Closed-Loop Reporting",
    text: "We track the lead until they become a paying patient."
  }
];
---

<section class="py-16 bg-white" id="problem-solution">
  
  <!-- Trusted By Bar -->
  <div class="container mx-auto px-4 mb-24">
    <p class="text-center text-xs font-semibold tracking-widest text-slate-400 uppercase mb-8">
      Trusted by forward-thinking medical practices in Malaysia
    </p>
    <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16 opacity-60 grayscale hover:grayscale-0 transition-all duration-500">
      {trustedLogos.map((logo) => (
        <div class="flex items-center gap-2 text-slate-500 font-medium group cursor-default">
          <logo.icon className="w-5 h-5 group-hover:text-brand transition-colors" />
          <span class="group-hover:text-slate-900 transition-colors">{logo.name}</span>
        </div>
      ))}
    </div>
  </div>

  <!-- Section 3: The "Who We Help" Grid (Segmentation) -->
  <div class="container mx-auto px-4 mb-32">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl md:text-5xl font-extrabold text-slate-900 mb-6 tracking-tight leading-tight">
        Specialized Growth Strategies <br/> <span class="text-brand">For Your Practice.</span>
      </h2>
      <p class="text-xl text-slate-600 leading-relaxed">
        We don’t use cookie-cutter templates. We build compliant marketing ecosystems tailored to your specific medical niche.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      {segments.map((item) => (
        <div class="bg-slate-50 p-8 rounded-2xl border border-slate-100 hover:border-brand/20 hover:shadow-xl hover:shadow-brand/5 hover:-translate-y-1 transition-all duration-300 group relative overflow-hidden">
            <div class="absolute top-0 left-0 w-1 h-full bg-brand opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            
            <div class="w-14 h-14 bg-white rounded-xl shadow-sm border border-slate-100 flex items-center justify-center mb-6 group-hover:scale-110 group-hover:rotate-3 transition-transform duration-300 text-brand">
              <item.icon className="w-7 h-7" />
            </div>
            
            <h3 class="text-xl font-bold text-slate-900 mb-3">{item.title}</h3>
            <p class="text-slate-600 leading-relaxed text-sm mb-6 min-h-[80px]">
                {item.description}
            </p>
            
            <a href={item.link} class="inline-flex items-center text-sm font-bold text-brand hover:text-brand-dark transition-colors group/link">
                {item.cta}
                <ArrowRight className="w-4 h-4 ml-1 transition-transform group-hover/link:translate-x-1" />
            </a>
        </div>
      ))}
    </div>
  </div>

  <!-- Section 4: The "Problem/Solution" (The Differentiator) -->
  <div class="container mx-auto px-4">
    <div class="bg-slate-900 rounded-[2.5rem] p-8 md:p-16 overflow-hidden relative">
        <!-- Background Glow -->
        <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-brand/20 rounded-full blur-[120px] pointer-events-none"></div>

        <div class="grid lg:grid-cols-2 gap-16 items-center relative z-10">
            <!-- Left Side: Copy -->
            <div>
                <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-brand/10 border border-brand/20 text-brand text-xs font-bold uppercase tracking-wider mb-8">
                    <Activity className="w-4 h-4" />
                    The GrowthBooster Framework™
                </div>
                
                <h2 class="text-3xl md:text-5xl font-black text-white mb-6 tracking-tight leading-tight">
                    Most Agencies Guess. <br/> <span class="text-brand">We Engineer.</span>
                </h2>
                
                <p class="text-lg text-slate-300 mb-8 leading-relaxed">
                    Marketing a clinic in Malaysia is complex. Between strict MOH regulations (KKLIU), saturated locations, and rising ad costs, "posting on Facebook" isn't enough anymore.
                </p>
                <p class="text-lg text-slate-300 mb-10 leading-relaxed">
                    Lamanify replaces guesswork with our <strong class="text-white">GrowthBooster Framework™</strong>. We combine technical SEO, precision paid media, and automated patient reactivation into a single, predictable engine.
                </p>

                <ul class="space-y-4 mb-10">
                    {frameworkPoints.map((point) => (
                        <li class="flex items-start gap-4">
                            <div class="mt-1 min-w-6">
                                <CheckCircle2 className="w-6 h-6 text-brand" />
                            </div>
                            <div>
                                <h4 class="text-white font-bold text-lg">{point.title}</h4>
                                <p class="text-slate-400 text-sm leading-relaxed">{point.text}</p>
                            </div>
                        </li>
                    ))}
                </ul>

                <Button variant="primary" className="w-full sm:w-auto px-8 py-4 text-lg bg-brand hover:bg-brand-dark text-white rounded-full shadow-lg shadow-brand/25">
                    See How It Works
                </Button>
            </div>

            <!-- Right Side: The Visual -->
            <div class="relative group">
                <div class="absolute -inset-1 bg-gradient-to-r from-brand to-purple-600 rounded-2xl opacity-20 group-hover:opacity-40 blur transition duration-500"></div>
                <div class="relative bg-slate-950 rounded-2xl overflow-hidden border border-slate-800 shadow-2xl aspect-[4/3] flex items-center justify-center">
                    <img 
                        src="/images/growth-booster-schematic.png" 
                        alt="GrowthBooster Framework Schematic" 
                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-700"
                    />
                    
                    <!-- Overlay Gradient -->
                    <div class="absolute inset-0 bg-gradient-to-t from-slate-950/80 via-transparent to-transparent pointer-events-none"></div>
                </div>
            </div>
        </div>
    </div>
  </div>

</section>
